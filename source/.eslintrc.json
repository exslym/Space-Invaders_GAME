{
	"root": true,
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jquery": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": ["import", "prettier"],
	"rules": {
		"no-unused-vars": "off",

		"linebreak-style": ["error", "unix"],
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"jsxSingleQuote": true,
				"arrowParens": "avoid",
				"max-len": ["error", 180, 2],
				"tabWidth": 2,
				"useTabs": true,
				"endOfLine": "auto"
			}
		]
	}
}
